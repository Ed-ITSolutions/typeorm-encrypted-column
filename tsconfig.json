{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strictPropertyInitialization": false,
    "removeComments": true,
    "noEmitOnError": true,
    "noResolve": false,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "sourceMap": true,
    "baseUrl": "./src/",
    "outDir": "./dist/",
    "allowUnusedLabels": true,
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ],
    "declaration": true
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "src/**/*.spec.ts"
  ]
}